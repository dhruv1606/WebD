<% layout('layouts/boilerplate') %>
  
<div class="row">
  <div class="col-6 offset-3">
    <h1 class="text-center">Edit Campground</h1>
    <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input class="form-control" type="text" name="campground[title]" id="title" value="<%=campground.title%>">
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image URL</label>
        <input class="form-control" type="text" name="campground[image]" id="image" value="<%=campground.image%>">
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input class="form-control" type="text" name="campground[location]" id="location" value="<%=campground.location%>">
      </div>
      <div class="col-auto mb-3">
        <label class="sr-only" for="inlineFormInputGroup">Price</label>
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <div class="input-group-text">$</div>
          </div>
          <input type="text" class="form-control" id="inlineFormInputGroup" placeholder="0" name="campground[price]" value="<%=campground.price%>">
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea class="form-control" type="text-area" name="campground[description]" id="description"><%=campground.description%></textarea>
      </div>
      <button class="btn btn-secondary mb-3">Edit Campground</button>
    </form>
    <div><a href="/campgrounds">All Campgrounds</a></div>
  </div>
</div>

  
