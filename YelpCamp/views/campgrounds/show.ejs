<% layout('layouts/boilerplate') %>

<div class="row">
  <div class="col-6 offset-3">
    <div class="card" style="width: 18rem;">
      <img class="card-img-top" src="<%=campground.image%>" alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title"><%=campground.title%></h5>
        <p class="card-text"><%=campground.description%></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Price: $<%=campground.price%></li>
        <li class="list-group-item">Location: <%=campground.location%></li>
      </ul>
      <div class="card-body">
        <a href="/campgrounds" class="card-link btn btn-primary mb-3">All Campgrounds</a>
        <a href="/campgrounds/<%=campground._id%>/edit" class="card-link btn btn-secondary mb-3">Edit</a>
        <form action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST" class="mb-3">
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
    
  </div>
</div>
